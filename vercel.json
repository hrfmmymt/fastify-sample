{
  "version": 2,
  "builds": [
    {
      "src": "/**.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["templates/**", "public/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js"
    },
    { "src": "/(.*)", "status": 404, "dest": "/404.html" }
  ],
  "env": {
    "FILE_PATH": "templates/"
  },
  "build": {
    "env": {
      "FILE_PATH": ""
    }
  }
}
